<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prl_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        tools:ignore="RtlSymmetry">

        <View
            android:id="@+id/view_seperator"
            android:layout_width="2px"
            android:layout_height="wrap_content"
            android:background="#ADADAD"
            android:gravity="top"
            tools:ignore="PxUsage" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:text="0000李大仁"

            android:textColor="#CC374043"
            android:textStyle="bold"

            app:autoSizeMinTextSize="18sp"
            app:autoSizeMaxTextSize="36sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"


            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/iv_yizhida"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_yizhida"
            android:visibility="gone"
            app:layout_heightPercent="66%h"
            app:layout_widthPercent="66%h"/>

        <ImageView
            android:id="@+id/iv_emergency"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/emergency"
            android:visibility="gone"
            app:layout_heightPercent="66%h"
            app:layout_widthPercent="66%h" />

        <ImageView
            android:id="@+id/iv_wechat_came"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/sign_in_is_came"
            android:visibility="gone"
            app:layout_heightPercent="66%h"
            app:layout_widthPercent="66%h" />


    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>