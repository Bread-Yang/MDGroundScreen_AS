<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="127.5dp"
        android:layout_height="52.5dp"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_seperator"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#ADADAD"
            android:gravity="top" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="119.5dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/view_seperator"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#CC374043"
            android:textSize="41dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_yizhida"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/tv_num"
            android:layout_marginRight="7.5dp"
            android:layout_marginTop="7.5dp"
            android:src="@drawable/icon_yizhida"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_emergency"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/tv_num"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="7.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/emergency"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>