<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- activity anim -->
    <style name="AnimMove" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/left_push_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_push_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_push_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_push_out</item>
    </style>

    <style name="Anim_style" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimMove</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#1a1a1a</item>
    </style>

    <style name="TextAppearance.Small" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/size_12</item>
    </style>

    <style name="TextAppearance.Medium" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/size_17</item>
    </style>

    <style name="TextAppearance.Big" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/size_24</item>
    </style>

    <style name="TextAppearance.Large" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/size_51</item>
    </style>

    <style name="TextAppearance.Small.Gray" parent="@style/TextAppearance.Small">
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="TextAppearance.Small.Gray.Bold" parent="@style/TextAppearance.Small">
        <item name="android:textColor">@color/font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Small.Dark" parent="@style/TextAppearance.Small">
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="TextAppearance.Small.Dark.Bold" parent="@style/TextAppearance.Small">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Medium.Gray" parent="@style/TextAppearance.Medium">
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="TextAppearance.Medium.Dark" parent="@style/TextAppearance.Medium">
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="TextAppearance.Medium.Blue" parent="@style/TextAppearance.Medium">
        <item name="android:textColor">@color/font_blue</item>
    </style>

    <style name="TextAppearance.Big.Dark" parent="@style/TextAppearance.Big">
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="TextAppearance.Large.Dark" parent="@style/TextAppearance.Large">
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="TextAppearance.Large.Dark.Bold" parent="@style/TextAppearance.Large">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loadingDialog" parent="android:style/Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>